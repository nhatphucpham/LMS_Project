<Page
    x:Class="LMS_Project.Pages.NovelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LMS_Project.Pages"
    xmlns:data ="using:LMS_Project.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:DataType="data:Novel" x:Key="NovelsDataTemplate">
            <Grid Background="{ThemeResource SystemControlBackgroundBaseMediumBrush}" >
                <Image HorizontalAlignment="Center" Source="{x:Bind ImageUrl}" 
                       VerticalAlignment="Center" Stretch="Fill"/>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="{ThemeResource SystemControlHighlightAltListAccentMediumBrush}" MinHeight="55">
                    <TextBlock FontSize="16" Text="{x:Bind Title}"  MaxLines="2"
                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" TextAlignment="Center" 
                               Foreground="White" Margin="5" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" Padding="5">
        <ProgressRing x:Name="LoadingIndicator"></ProgressRing>
        <GridView x:Name="MainGridView" ItemsSource="{Binding}" 
                  ItemTemplate="{StaticResource NovelsDataTemplate}" 
                  IsItemClickEnabled="true"
                  Padding="10"
                  ItemClick="MainGridView_ItemClick" 
                  Loaded="MainGridView_Loaded" SizeChanged="MainGridView_SizeChanged" >
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,20,20"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>
