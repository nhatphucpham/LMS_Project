<Page
    x:Class="LMS_Project.Pages.ChapterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LMS_Project.Pages"
    xmlns:data="using:LMS_Project.Data"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Resources>
        <DataTemplate                           x:Key="ChapterDataTemplate">
            <StackPanel x:ConnectionId='1' HorizontalAlignment="Center" Width="250" Padding="10">
                <TextBlock x:ConnectionId='2' FontSize="12"                                 HorizontalAlignment="Left" />
                <TextBlock x:ConnectionId='3' FontSize="12"                      HorizontalAlignment="Left" />
                <TextBlock x:ConnectionId='4' FontSize="12"                            HorizontalAlignment="Left" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='5' Background="{ThemeResource SystemControlBackgroundAltHighBrush}"                     >
        <ProgressRing x:ConnectionId='6' x:Name="LoadingIndicator"></ProgressRing>
        <GridView x:ConnectionId='7' x:Name="MainGridView"
                  ItemsSource="{Binding}"
                  ItemTemplate="{StaticResource ChapterDataTemplate}" 
                  IsItemClickEnabled="true"
                                                    >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>

