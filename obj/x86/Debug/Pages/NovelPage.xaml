<Page
    x:Class="LMS_Project.Pages.NovelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LMS_Project.Pages"
    xmlns:data ="using:LMS_Project.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate                         x:Key="NovelsDataTemplate">
            <Grid x:ConnectionId='1' Width="240" Height="280" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                <Image x:ConnectionId='2' HorizontalAlignment="Center"                            VerticalAlignment="Center" Stretch="Fill"            />
                <ProgressRing x:Name="LoadingImage"></ProgressRing>
                <StackPanel Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="10,0">
                    <TextBlock x:ConnectionId='3' FontSize="20"                       HorizontalAlignment="Center" VerticalAlignment="Bottom" TextWrapping="Wrap"             Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" Padding="5" Margin="5">
        <ProgressRing x:ConnectionId='4' x:Name="LoadingIndicator"></ProgressRing>
        <GridView x:ConnectionId='5' x:Name="MainGridView" ItemsSource="{Binding}" 
                  ItemTemplate="{StaticResource NovelsDataTemplate}" 
                  IsItemClickEnabled="true"
                  Padding="10"
                                                                                  ShowsScrollingPlaceholders="True"                                                                 >
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,20,20"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>

