<Page x:ConnectionId='1'
    x:Class="LMS_Project.Pages.EpisodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LMS_Project"
    xmlns:data ="using:LMS_Project.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate                           x:Key="EpisodeDataTemplate">
            <Grid x:ConnectionId='2' HorizontalAlignment="Center" Padding="10" VerticalAlignment="Center">
                <TextBlock x:ConnectionId='3' FontSize="18"                      
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" VerticalAlignment="Top" OpticalMarginAlignment="TrimSideBearings" TextTrimming="WordEllipsis" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='4' Background="{ThemeResource SystemControlBackgroundAltHighBrush}"                     >
        <ProgressRing x:ConnectionId='5' x:Name="LoadingIndicator" Margin="345,0,0,0"></ProgressRing>
        <Grid x:ConnectionId='6' x:Name="NovelGrid" HorizontalAlignment="Left" Width="340" Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"                                           Padding="5"                                    >
            <Grid.RowDefinitions>
                <RowDefinition Height="213*"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>
            <Ellipse x:ConnectionId='8' x:Name="ellipse" Stretch="Uniform" Margin="0" Stroke="{ThemeResource SystemControlForegroundAccentBrush}" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush x:ConnectionId='10'                                 Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:ConnectionId='9'                       
                       FontSize="25" FontFamily="Segoe Script" 
                       TextWrapping="Wrap" TextAlignment="Center" IsHitTestVisible="False"
                       Foreground="{ThemeResource SystemControlBackgroundChromeWhiteBrush}" 
                       Margin="0" Grid.Row="1" TextLineBounds="TrimToCapHeight" LineHeight="2" FontWeight="Bold" />
        </Grid>
        <GridView x:ConnectionId='7' x:Name="MainGridView"
                  ItemsSource="{Binding}"
                  ItemTemplate="{StaticResource EpisodeDataTemplate}" 
                  IsItemClickEnabled="true"
                                                     Margin="345,0,0,0"                                       >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate >
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>

